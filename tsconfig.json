{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@claude-tools/shared/*": ["./shared/*"]
    }
  },
  "include": ["packages/**/*", "shared/**/*", "tools/**/*"],
  "exclude": ["node_modules", "dist"]
}
